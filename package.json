{
  "name": "quarky",
  "description": "The worst chat app on Earth",
  "author": "Hakase",
  "version": "0.0.2",
  "codename": "Nano",

  "type": "module",
  "license": "unlicensed",
  "homepage": ".",
  "main": "desktop/index.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm:serve\" \"npm:electron\"",
    "serve": "vite --host",
    "electron": "electron-forge start --app-path desktop",
    "build": "node src/nyafile-compiler.js && vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "node src/license-compiler.js && node src/nyafile-compiler.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "trustedDependencies": [
    "@sentry/cli",
    "electron"
  ],
  "dependencies": {
    "@litdevs/nyalib": "^1.3.0",
    "@sentry/react": "^7.80.0",
