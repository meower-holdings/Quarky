    "classnames": "^2.3.2",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^23.6.0",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-resources-to-backend": "^1.2.0",
    "linkify-react": "^4.1.3",
    "linkifyjs": "^4.1.3",
    "localforage": "^1.10.0",
    "qr-code-styling": "^1.6.0-rc.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.3.1",
